{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */                                                  /* Specify include pattern(s) to match files to be included in compilation. */
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
